FROM wrouesnel/postgres_exporter:latest

ARG POSTGRES_USER=${POSTGRES_USER}
ARG POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
ARG POSTGRES_HOST=${POSTGRES_HOST}
ARG POSTGRES_PORT=${POSTGRES_PORT}
ARG POSTGRES_DB=${POSTGRES_DB}

EXPOSE 9187

ENV DATA_SOURCE_NAME postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable
